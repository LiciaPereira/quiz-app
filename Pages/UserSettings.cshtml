@page
@model quiz_app.Pages.UserSettingsModel

<h2>User Settings</h2>

<form method="post">
    <div>
        <label for="EnableTimer">Enable Timer:</label>
        <input type="checkbox" id="EnableTimer" name="EnableTimer" asp-for="Settings.EnableTimer" />
    </div>
    <div>
        <label for="TimerDuration">Timer Duration (seconds):</label>
        <input type="number" id="TimerDuration" name="TimerDuration" asp-for="Settings.TimerDuration" min="10" max="300" />
    </div>
    <div>
        <label for="ShowFeedback">Show Feedback After Each Question:</label>
        <input type="checkbox" id="ShowFeedback" name="ShowFeedback" asp-for="Settings.ShowFeedback" />
    </div>
    <button type="submit">Save Settings</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
